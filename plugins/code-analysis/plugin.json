{
	"name": "code-analysis",
	"version": "2.8.1",
	"description": "Deep code investigation with claudemem v0.8.0. AST structural analysis with PageRank, callers/callees dependency tracing. NEW: Auto-reindex on file changes (background, debounced). Search feedback protocol for per-project learning. Framework documentation fetching. Hooks intercept Grep/Bash/Glob/Read.",
	"author": {
		"name": "Jack Rudenko",
		"email": "i@madappgang.com",
		"company": "MadAppGang"
	},
	"license": "MIT",
	"keywords": [
		"code-analysis",
		"codebase",
		"investigation",
		"detective",
		"architecture",
		"patterns",
		"debugging",
		"code-navigation",
		"semantic-search",
		"claudemem",
		"hooks",
		"interception",
		"enforcement"
	],
	"category": "development",
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/auto-reindex.sh"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Grep",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/intercept-grep.sh"
					}
				]
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/intercept-bash.sh"
					}
				]
			},
			{
				"matcher": "Glob",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/intercept-glob.sh"
					}
				]
			},
			{
				"matcher": "Read",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/intercept-read.sh"
					}
				]
			}
		]
	},
	"agents": [
		"./agents/codebase-detective.md"
	],
	"commands": [
		"./commands/analyze.md",
		"./commands/help.md",
		"./commands/setup.md"
	],
	"skills": [
		"./skills/deep-analysis",
		"./skills/claudemem-search",
		"./skills/claudemem-orchestration",
		"./skills/claudish-usage",
		"./skills/code-search-selector",
		"./skills/search-interceptor",
		"./skills/architect-detective",
		"./skills/developer-detective",
		"./skills/tester-detective",
		"./skills/debugger-detective",
		"./skills/ultrathink-detective",
		"./skills/cross-plugin-detective"
	]
}

{
  "_comment": "Copy this to mcp-config.json and configure your credentials",
  "_claudeup": "RECOMMENDED: Run 'npx claudeup' and navigate to SEO & Analytics",

  "google-analytics": {
    "command": "npx",
    "args": ["-y", "mcp-server-google-analytics"],
    "env": {
      "GOOGLE_CLIENT_EMAIL": "your-service-account@project.iam.gserviceaccount.com",
      "GOOGLE_PRIVATE_KEY": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
      "GA_PROPERTY_ID": "properties/123456789"
    },
    "_setup": [
      "1. Create Service Account in Google Cloud Console",
      "2. Enable Analytics Data API",
      "3. Grant Service Account 'Viewer' access to GA4 property",
      "4. Download JSON credentials and extract email + private key"
    ]
  },

  "google-search-console": {
    "command": "npx",
    "args": ["-y", "mcp-server-gsc"],
    "env": {
      "GOOGLE_APPLICATION_CREDENTIALS": "/path/to/service-account.json",
      "GSC_SITE_URL": "https://example.com"
    },
    "_setup": [
      "1. Use same Service Account as GA4 (shared auth)",
      "2. Add Service Account email as user in Search Console",
      "3. Grant 'Full' permission level",
      "4. Point to JSON credentials file"
    ]
  },

  "seo-data-api-mcp": {
    "command": "docker",
    "args": ["run", "-i", "--rm", "-e", "SERANKING_API_TOKEN", "se-ranking/seo-data-api-mcp-server"],
    "env": {
      "SERANKING_API_TOKEN": "your-api-token-here"
    },
    "_setup": [
      "1. Clone: git clone https://github.com/seranking/seo-data-api-mcp-server.git",
      "2. Build: cd seo-data-api-mcp-server && docker compose build",
      "3. Get API token from SE Ranking dashboard (Settings > API)",
      "4. Set SERANKING_API_TOKEN environment variable"
    ],
    "_tools": [
      "domainOverview - Domain performance metrics",
      "domainKeywords - Keyword rankings for domain",
      "domainCompetitors - Competitor identification",
      "domainKeywordsComparison - Compare keywords across domains",
      "backlinksAll - Retrieve backlink data",
      "relatedKeywords - Related keyword discovery",
      "similarKeywords - Similar keyword suggestions"
    ]
  }
}
